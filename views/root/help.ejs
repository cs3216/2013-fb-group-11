    <body class="main-page about-page">
        <%- partial('../fb.ejs') %>
        <%- partial('../navigation.ejs') %>
        <div class="main-container">
            <div class="row">
                <div class="large-12 columns">
                    <div class="main-box-container large-8 columns large-centered about-container">
                        <div class="main-box">
                          <h1>Help</h1>
                          <hr/>
                          <p>The following is a list of emoticons you can use in your posts.</p>
                          <table class="markup-table">
                            <thead>
                              <tr>
                                <th width="80">You type</th>
                                <th width="120">You see</th>
                                <th width="80">You type</th>
                                <th width="120">You see</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% for (var i = 0; i < markdown_table.length; i++) { %>
                              <tr>
                                <% for (var j = 0; j < markdown_table[i].length; j++) { %>
                                  <td><%= markdown_table[i][j].key %></td>
                                  <td><i class="icon-<%= markdown_table[i][j].value %>"></i></td>
                                <% } %>
                              </tr>
                              <% } %>
                            </tbody>
                          </table>
                          <p>You can add media content to your posts too!</p>
                          <table class="markup-table media-table">
                            <thead>
                              <tr>
                                <th width="200">Media</th>
                                <th width="208">Format</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr><td>Links</td><td>[link:&lt;url&gt;]</td></tr>
                              <tr><td>Images</td><td>[img:&lt;img_url&gt;]</td></tr>
                              <tr><td>Youtube Videos</td><td>[youtube:&lt;youtube_url&gt;]</td></tr>
                            </tbody>
                          </table>
                        </div>
                        <p class="login-bottom">
                          <a href="/about">About</a> &middot; 
                          <a href="/team">The Team</a> &middot; 
                          <a href="/help">Help</a> &middot; 
                          <a href="mailto:tay.yang.shun@gmail.com?subject=Osmose">Contact Us</a>
                          <!-- <a href="/terms">Terms & Conditions</a> -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-container">
            <%- partial('../footer.ejs') %>
        </div>
        <%- partial('../html5-boilerplate.ejs') %>
    </body>
</html>
